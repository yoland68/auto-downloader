{
  "playlist_url": "https://www.youtube.com/watch?list=PLgoP2gLGiq5OE0uiQN9fHsq6cT_sjCPAq",
  "download_path": "./downloads",
  "log_file": "downloader.log",
  "check_interval_seconds": 60,
  "yt_dlp_options": {
    "skip_download": true,
    "write_auto_subs": true,
    "sub_lang": "en",
    "embed_subs": false,
    "ignore_errors": true,
    "output_template": "%(playlist_title)s/%(upload_date)s - %(title)s [%(id)s].%(ext)s"
  },
  "google_drive_sync": {
    "enabled": true,
    "sync_folder": "~/Documents/YT List Subtitles",
    "sync_archive": ".subtitle_sync_archive.txt",
    "preserve_structure": false
  }
}